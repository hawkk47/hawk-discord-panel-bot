<% // Vue Administration: utilisateurs du panel %>
<div class="mb-6">
  <h1 class="text-2xl font-semibold">Administration · Utilisateurs</h1>
  <p class="text-sm text-gray-400 mt-1">Gère les rôles d’accès au panel.</p>
</div>

<div class="overflow-hidden rounded-lg border border-gray-700">
  <table class="min-w-full divide-y divide-gray-700">
    <thead class="bg-gray-800">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Rôle</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="bg-gray-900 divide-y divide-gray-800">
      <% if ((users || []).length === 0) { %>
        <tr>
          <td class="px-6 py-4 text-sm text-gray-400" colspan="3">Aucun utilisateur pour l’instant.</td>
        </tr>
      <% } %>
      <% for (const u of (users || [])) { %>
        <tr>
          <td class="px-6 py-4 text-sm font-mono"><%= u.userId %></td>
          <td class="px-6 py-4 text-sm">
            <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-800 border border-gray-700">
              <%= u.role %>
            </span>
          </td>
          <td class="px-6 py-4 text-right">
            <form method="POST" action="/admin/users/<%= u.userId %>/role" class="inline-flex items-center gap-2">
              <%- include('./partials/csrf'); %>
              <select name="role" class="bg-gray-900 border border-gray-700 rounded px-2 py-1 text-sm">
                <option value="viewer" <%= u.role==='viewer'?'selected':'' %>>viewer</option>
                <option value="admin"  <%= u.role==='admin' ?'selected':'' %>>admin</option>
              </select>
              <button class="px-3 py-1 rounded bg-indigo-600 hover:bg-indigo-500 text-sm">Enregistrer</button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
